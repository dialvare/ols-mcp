# OpenShift LightSpeed MCP Server Configuration
# Copy this file to .env and update the values as needed

# OLS API endpoint URL
# Default: http://localhost:8080
OLS_API_URL=http://localhost:8080

# Bearer token for OLS API authentication
# Required for most OLS deployments
# OLS_API_TOKEN=your-bearer-token-here

# Request timeout in seconds
# Default: 30.0
OLS_TIMEOUT=30.0

# SSL certificate verification
# Set to false for development with self-signed certificates
# Default: true
OLS_VERIFY_SSL=true